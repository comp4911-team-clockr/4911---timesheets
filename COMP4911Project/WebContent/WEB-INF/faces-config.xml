<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
	<!-- Message Bundle -->
	<application>
		<locale-config>
			<default-locale>en</default-locale>
		</locale-config>
		<resource-bundle>
			<base-name>comp4911.messageBundle.loginMessage</base-name>
			<var>loginMsg</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>comp4911.messageBundle.timeSheetMessage</base-name>
			<var>tsMsg</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>comp4911.messageBundle.employeeMessage</base-name>
			<var>empMsg</var>
		</resource-bundle>
	</application>

	<!-- Navigation Rules -->
	<navigation-rule>
		<from-view-id>/MainIndex.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>loggedin</from-outcome>
			<to-view-id>/Splash.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>ForgotPasswordPage</from-outcome>
			<to-view-id>/ForgottenPassword.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/EmployeesHR.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>AddEmployee</from-outcome>
			<to-view-id>/AddEmployee.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/DisplayProjects.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>addProject</from-outcome>
			<to-view-id>/AddProject.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/DisplayWorkPackages.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>addWP</from-outcome>
			<to-view-id>/AddWorkPackage.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/DisplayEmployees.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>DisplayEmployeeList</from-outcome>
			<to-view-id>/DisplayEmployees.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/AddEmployee.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>displayEmployeeList</from-outcome>
			<to-view-id>/DisplayEmployees.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>reloadEmpList</from-outcome>
			<to-view-id>/DisplayEmployees.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/AddProject.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>projects</from-outcome>
			<to-view-id>/DisplayProjects.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>reloadProjects</from-outcome>
			<to-view-id>/DisplayProjects.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/EditEmployee.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>cancelEditEmployee</from-outcome>
			<to-view-id>/DisplayEmployees.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>DisplayEmployees</from-outcome>
			<to-view-id>/DisplayEmployees.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/DisplayTimesheets.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>CreateTimesheet</from-outcome>
			<to-view-id>/CreateTimesheet.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>cancelCreateTimesheet</from-outcome>
			<to-view-id>/DisplayTimesheets.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>EditTimesheet</from-outcome>
			<to-view-id>/EditTimesheet.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>DisplayTimesheets</from-outcome>
			<to-view-id>/DisplayTimesheets.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/EditTimesheet.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>cancelEditTimesheet</from-outcome>
			<to-view-id>/DisplayTimesheets.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>EditTimesheetReturn</from-outcome>
			<to-view-id>/EditTimesheet.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/CreateTimesheet.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>cancelCreateTimesheet</from-outcome>
			<to-view-id>/DisplayTimesheets.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/ForgottenPassword.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>ForgotPasswordCancel</from-outcome>
			<to-view-id>/MainIndex.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>
