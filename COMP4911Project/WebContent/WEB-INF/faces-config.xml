<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xi="http://www.w3.org/2001/XInclude"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
	<application>
		<locale-config>
			<default-locale>en</default-locale>
		</locale-config>
		<resource-bundle>
			<base-name>comp4911.messageBundle.employeeMessage</base-name>
			<var>empMsg</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>comp4911.messageBundle.loginMessage</base-name>
			<var>loginMsg</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>comp4911.messageBundle.pageTitles</base-name>
			<var>title</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>comp4911.messageBundle.projectMessage</base-name>
			<var>projMsg</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>comp4911.messageBundle.timeSheetMessage</base-name>
			<var>tsMsg</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>comp4911.messageBundle.workPackageMessage</base-name>
			<var>wpMsg</var>
		</resource-bundle>
	</application>
	
	<navigation-rule>
		<from-view-id>/MainIndex.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>loggedin</from-outcome>
			<to-view-id>/welcome/Splash.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>ForgotPasswordPage</from-outcome>
			<to-view-id>/ForgottenPassword.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!--  added CreateTimesheet outcome navigation case -->
	<navigation-rule>
		<from-view-id>/welcome/Splash.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>CreateTimesheet</from-outcome>
			<to-view-id>/timesheets/CreateTimesheet.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>AddEmployee</from-outcome>
			<to-view-id>/employees/AddEmployee.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>addWPSplash</from-outcome>
			<to-view-id>/wp/AddWorkPackage.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>addProject</from-outcome>
			<to-view-id>/projects/AddProject.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>DisplayWorkProjects</from-outcome>
			<to-view-id>/wp/DisplayWorkPackages.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/EmployeesHR.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>AddEmployee</from-outcome>
			<to-view-id>/AddEmployee.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/projects/DisplayProjects.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>addProject</from-outcome>
			<to-view-id>/projects/AddProject.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>viewProject</from-outcome>
			<to-view-id>/projects/ViewProject.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>editProject</from-outcome>
			<to-view-id>/projects/EditProject.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>DisplayEmployees</from-outcome>
			<to-view-id>/employees/DisplayEmployees.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>DisplayWorkPackages</from-outcome>
			<to-view-id>/wp/DisplayWorkPackages.xhtml</to-view-id>
		</navigation-case>		
		<navigation-case>
			<from-outcome>AddWorkPackage</from-outcome>
			<to-view-id>/wp/AddWorkPackage.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>DisplayMonthlyReport</from-outcome>
			<to-view-id>/reports/DisplayMonthlyReport.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/wp/DisplayWorkPackages.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>DisplayProjects</from-outcome>
			<to-view-id>/projects/DisplayProjects.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>DisplayStatusReport</from-outcome>
			<to-view-id>/reports/DisplayStatusReport.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	
	<navigation-rule>
		<from-view-id>/reports/DisplayStatusReport.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>EditStatusReport</from-outcome>
			<to-view-id>/reports/EditStatusReport.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>AddStatusReport</from-outcome>
			<to-view-id>/reports/AddStatusReport.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>DisplayWorkPackages</from-outcome>
			<to-view-id>/wp/DisplayWorkPackages.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/reports/DisplayMonthlyReport.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>viewMR</from-outcome>
			<to-view-id>/reports/DisplayMonthlyReport.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>DisplayProjects</from-outcome>
			<to-view-id>/projects/DisplayProjects.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/wp/AddWorkPackage.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>DisplayProject</from-outcome>
			<to-view-id>/projects/DisplayProjects.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/employees/DisplayEmployees.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>DisplayEmployeeList</from-outcome>
			<to-view-id>/employees/DisplayEmployees.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>EmployeeToProjects</from-outcome>
			<to-view-id>/projects/DisplayProjects.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>DisplayWorkPackages</from-outcome>
			<to-view-id>/wp/DisplayWorkPackages.xhtml</to-view-id>
		</navigation-case>		
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/employees/AddEmployee.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>displayEmployeeList</from-outcome>
			<to-view-id>/employees/DisplayEmployees.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>reloadEmpList</from-outcome>
			<to-view-id>/employees/DisplayEmployees.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/projects/AddProject.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>projects</from-outcome>
			<to-view-id>/projects/DisplayProjects.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>reloadProjects</from-outcome>
			<to-view-id>/projects/DisplayProjects.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/projects/EditProject.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>cancelEditProject</from-outcome>
			<to-view-id>/projects/DisplayProjects.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>editProject</from-outcome>
			<to-view-id>/projects/DisplayProjects.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/employees/EditEmployee.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>cancelEditEmployee</from-outcome>
			<to-view-id>/employees/DisplayEmployees.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>DisplayEmployees</from-outcome>
			<to-view-id>/employees/DisplayEmployees.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/timesheets/DisplayTimesheets.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>CreateTimesheet</from-outcome>
			<to-view-id>/timesheets/CreateTimesheet.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-outcome>cancelCreateTimesheet</from-outcome>
			<to-view-id>/timesheets/DisplayTimesheets.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>EditTimesheet</from-outcome>
			<to-view-id>/timesheets/EditTimesheet.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>DisplayTimesheets</from-outcome>
			<to-view-id>/timesheets/DisplayTimesheets.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/timesheets/EditTimesheet.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>cancelEditTimesheet</from-outcome>
			<to-view-id>/timesheets/DisplayTimesheets.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>EditTimesheetReturn</from-outcome>
			<to-view-id>/timesheets/EditTimesheet.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/timesheets/CreateTimesheet.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>CancelCreateTimesheet</from-outcome>
			<to-view-id>/timesheets/DisplayTimesheets.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/ForgottenPassword.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>ForgotPasswordCancel</from-outcome>
			<to-view-id>/MainIndex.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>GetRecoveryQuestions</from-outcome>
			<to-view-id>/RecoveryQuestions.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/RecoveryQuestions.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>RecoveryQuestionsCancel</from-outcome>
			<to-view-id>/MainIndex.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>RecoveryPassed</from-outcome>
			<to-view-id>/ChangePassword.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/ChangePassword.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>ChangePasswordConfirmed</from-outcome>
			<to-view-id>/MainIndex.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>CancelChangePassword</from-outcome>
			<to-view-id>/MainIndex.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/timesheets/ViewTimesheet.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>cancelViewTimesheet</from-outcome>
			<to-view-id>/timesheets/DisplayTimesheets.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/projects/ViewProject.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>cancelViewProject</from-outcome>
			<to-view-id>/projects/DisplayProjects.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/projects/ViewProject.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>cancelViewProject</from-outcome>
			<to-view-id>/projects/DisplayProjects.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/reports/DisplayStatusReport.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>DisplayWorkProjects</from-outcome>
			<to-view-id>/wp/DisplayWorkPackages.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/wp/ViewWorkPackage.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>cancelViewPackage</from-outcome>
			<to-view-id>/wp/DisplayWorkPackages.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/profile/ViewDetails.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>cancelViewDetails</from-outcome>
			<to-view-id>/welcome/Splash.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>		
</faces-config>
